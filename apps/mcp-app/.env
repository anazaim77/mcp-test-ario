# MCP Server Environment Configuration

# The port the server will listen on
PORT=3000

# The name of the MCP server (for identification in logs and protocol)
SERVER_NAME=mcp-calculator-server

# The version of the MCP server
SERVER_VERSION=1.0.0

# Enable DNS rebinding protection (true/false)
ENABLE_DNS_REBINDING_PROTECTION=false

# Allowed hosts for DNS rebinding protection (comma-separated)
ALLOWED_HOSTS=127.0.0.1,localhost

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Enable HTTP request logging (true/false)
ENABLE_REQUEST_LOGGING=false